@model IEnumerable<ProductionPartViewModel>
@{
    ViewData["Title"] = "AssemblyProductionPartList";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            

            @if (Model.Any())
            {
                <h2 class="text-primary">Working Assembly Production Part List</h2>
            }
            else
            {
                <h2 class="text-primary">This Assembly have no Parts yet</h2>
            }

        </div>
       
    </div>
    <br /><br />

    @if(Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Pic
                    </th>
                    <th>
                        Part Name
                    </th>
                    <th>
                        Drawing Number
                    </th>
                    @* <th>
                Material
                </th>
                <th>
                Paint Type
                </th>
                <th>
                Author
                </th>*@
                    <th>
                        Quantity
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="2%">
                            <img class="card-img-top" style="width: 3rem;"
                         src="@obj.Image" alt="Image Part">
                        </td>
                        <td width="11%">
                            @obj.Name
                        </td>
                        <td width="10%">
                            @obj.DrawingNumber
                        </td>
                        @* <td width="5%">
                @obj.Material
                </td>
                <td width="8%">
                @obj.TypeOfPaint
                </td>
                <td width="2%">
                @obj.AuthorSignature
                </td>*@
                        <td width="5%">
                            @obj.CreatedOn
                        </td>
                        <td width="32%">
                            <div class="w75 btn-group" role="group">
                                <a asp-controller="ProductionPart" asp-action="Details" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-card-checklist"></i> Details</a>
                                <a asp-controller="Assembly" asp-action="WhereUsed" asp-route-id="@obj.Id"
                           class="btn btn-info mx-2"> <i class="bi bi-diagram-3"></i> Where Used</a>
                                <a asp-controller="ProductionPart" asp-action="EditQuantity" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edit Quantity</a>
                                <a asp-controller="ProductionPart" asp-action="RemoveProductionPartFromAssembly" asp-route-id="@obj.Id"
                           class="btn btn-secondary mx-2"> <i class="bi bi-node-minus"></i> Remove</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }


    
</div>

