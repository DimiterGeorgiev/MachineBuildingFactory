@model EditAssemblyViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary">Details Assembly</h1>
<hr />
<partial name="_Notification" />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

        <img class="card-img-top" style="width: 18rem;"
             src="@Model.Image" alt="Image Assembly">

        @Html.HiddenFor(m => m.Id)

        <form asp-action="Details" method="get">

             <div class="mb-3">
                <a asp-controller="Assembly" asp-action="AllAssemblies" class="btn btn-secondary" style="width:150px">
                    All Assembly
                </a>
                @* <a asp-controller="ProductionPart" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> 
                   Delete
               </a>*@
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Assembly Name</label>
                <input asp-for="@Model.Name" disabled class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.DrawingNumber" class="form-label">Drawing Number</label>
                <input asp-for="@Model.DrawingNumber" disabled class="form-control" aria-required="true" />
                <span asp-validation-for="DrawingNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <textarea asp-for="@Model.Description" disabled class="form-control" aria-required="true" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Image</label>
                <input asp-for="@Model.Image" disabled class="form-control" aria-required="true" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.AuthorSignature" class="form-label">Author signature</label>
                <input asp-for="@Model.AuthorSignature" disabled class="form-control" aria-required="true" />
                <span asp-validation-for="AuthorSignature" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <a asp-controller="Assembly" asp-action="AssemblyProductionPartList" asp-route-id="@Model.Id"
                   class="btn btn-success mx-2"> <i class="bi bi-list"></i> Show list of Productin Parts
                </a>
                <a asp-controller="Assembly" asp-action="AssemblyPurchasedPartList" asp-route-id="@Model.Id"
                   class="btn btn-success mx-2">
                    <i class="bi bi-list"></i> Show list of Purchased Parts
                </a>
                <a asp-controller="Assembly" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
