@model IEnumerable<AssemblyViewModel>
@{
    ViewData["Title"] = "AllAssembly";
}


<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Assembly List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Assembly" asp-action="CreateNewAssembly" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new assembly
            </a>
        </div>
    </div>
    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Pic
                </th>
                <th>
                    Assembly Name
                </th>
                <th>
                    Drawing Number
                </th>
                <th>
                    Author
                </th>
                <th>
                    Created On
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="3%">
                        <img class="card-img-top" style="width: 3rem;"
                        src="@obj.Image" alt="Image Part">
                    </td>
                    <td width="10%">
                        @obj.Name
                    </td>
                    <td width="10%">
                        @obj.DrawingNumber
                    </td>
                    <td width="2%">
                        @obj.AuthorSignature
                    </td>
                    <td width="10%">
                        @obj.CreatedOn
                    </td>
                    <td width="19%">
                        <div class="w75 btn-group" role="group">
                            <a asp-controller="Assembly" asp-action="Details" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-card-checklist"></i> Details</a>
                            <a asp-controller="Assembly" asp-action="EditAssembly" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edti</a>
                            <a asp-controller="Assembly" asp-action="AddAssemblyToMineCollection" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-plus-square"></i> Add To Mine</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>