@model CreateProductionPartViewModel
@{
    ViewData["Title"] = "CreateNewProductionPart";
}

<h1 class="text-primary">Create new production part</h1>

<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="CreateNewProductionPart" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Part Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Image</label>
                <input asp-for="@Model.Image" class="form-control" aria-required="true" value="https://files.fm/thumb_show.php?i=wzjth76ag" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.TypeOfProductionPartId" class="form-label">Type of production part</label>
                <select asp-for="@Model.TypeOfProductionPartId" class="form-control">
                    @foreach (var type in Model.TypeOfProductionParts)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="TypeOfProductionPartId" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.AuthorSignature" class="form-label">Author signature</label>
                <input asp-for="@Model.AuthorSignature" class="form-control" value="" />
                <span asp-validation-for="AuthorSignature" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SurfaceArea" class="form-label">Surface area in square meters</label>
                <input asp-for="@Model.SurfaceArea" class="form-control" value="" />
                <span asp-validation-for="SurfaceArea" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DrawingNumber" class="form-label">Drawing Number</label>
                <input asp-for="@Model.DrawingNumber" class="form-control" value="" />
                <span asp-validation-for="DrawingNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Weight" class="form-label">Weight in kilograms</label>
                <input asp-for="@Model.Weight" class="form-control" value="" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.SurfaceTreatment">Surface treatment</label>

                <select class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.SurfaceTreatment">

                    <option value="@TypeOfSurfaceTreatment.UntreatedSurface">Untreated surface</option>
                    <option value="@TypeOfSurfaceTreatment.Electrogalvanized">Electrogalvanized</option>
                    <option value="@TypeOfSurfaceTreatment.Oxidize">Oxidize</option>
                    <option value="@TypeOfSurfaceTreatment.Paint">Paint</option>
                   
                </select>

                <span asp-validation-for="@Model.SurfaceTreatment" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.TypeOfPaint">Paint type</label>

                <select class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.TypeOfPaint">

                    <option value="@TypeOfPaint.Nitrocellulose">Nitrocellulose</option>
                    <option value="@TypeOfPaint.Synthetic">Synthetic</option>
                    <option value="@TypeOfPaint.Epoxy">Epoxy</option>
                    <option value="@TypeOfPaint.Polyurethane">Polyurethane</option>

                </select>

                <span asp-validation-for="@Model.TypeOfPaint" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ColorOfPaintRal">Color of paint</label>

                <select class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.ColorOfPaintRal">

                    <option value="@ColorOfPaintRal.RAL7035">RAL7035</option>
                    <option value="@ColorOfPaintRal.RAL1023">RAL1023</option>
                    <option value="@ColorOfPaintRal.RAL3000">RAL3000</option>
                    <option value="@ColorOfPaintRal.RAL2560">RAL2560</option>
                    <option value="@ColorOfPaintRal.RAL1056">RAL1056</option>

                </select>

                <span asp-validation-for="@Model.ColorOfPaintRal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.LaserCutLength" class="form-label">Lasercut length in meters</label>
                <input asp-for="@Model.LaserCutLength" class="form-control" value="0" />
                <span asp-validation-for="LaserCutLength" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.MaterialId" class="form-label">Material Number</label>
                <select asp-for="@Model.MaterialId" class="form-control">
                    @foreach (var material in Model.Materials)
                    {
                        <option value="@material.Id">@material.MaterialNumber</option>
                    }
                </select>
                <span asp-validation-for="MaterialId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}