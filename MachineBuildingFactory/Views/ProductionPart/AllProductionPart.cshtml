@model IEnumerable<ProductionPartViewModel>
@{
    ViewData["Title"] = "AllProductionPart";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Production Part List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ProductionPart" asp-action="CreateNewProductionPart" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new production part
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Part Name
            </th>
            <th>
                Drawing Number
            </th>
            <th>
                Material
            </th>
            <th>
                Paint Type
            </th>
            <th>
                Created On
            </th>
            <th>
                Author
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="6%">
                    @obj.Name
                </td>
                <td width="9%">
                    @obj.DrawingNumber
                </td>
                <td width="5%">
                    @obj.Material
                </td>
                <td width="8%">
                    @obj.TypeOfPaint
                </td>
                <td width="10%">
                    @obj.CreatedOn
                </td>
                <td width="2%">
                    @obj.AuthorSignature
                </td>
                <td width="28%">
                    <div class="w75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-card-checklist"></i> Details</a>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-info mx-2"> <i class="bi bi-diagram-3"></i> Where Used</a>
                        <a asp-controller="ProductionPart" asp-action="EditProductionPart" asp-route-id="@obj.Id"
                       class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edti</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
