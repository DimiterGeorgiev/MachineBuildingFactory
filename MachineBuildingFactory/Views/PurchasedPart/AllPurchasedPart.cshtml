@model IEnumerable<PurchasedPartViewModel>
@{
    ViewData["Title"] = "AllPurchasedPart";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Purchased Part List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="PurchasedPart" asp-action="CreateNewPurchasedPart" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new purchased part
            </a>
        </div>
    </div>
    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Pic
                </th>
                <th>
                    Part Name
                </th>
                <th>
                    Item Number
                </th>
                <th>
                    Supplier
                </th>
                <th>
                    Manufacturer
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="2%">
                        <img class="card-img-top" style="width: 3rem;"
                         src="@obj.Image" alt="Image Part">
                    </td>
                    <td width="10%">
                        @obj.Name
                    </td>
                    <td width="10%">
                        @obj.ItemNumber
                    </td>
                    <td width="8%">
                        @obj.Supplier
                    </td>
                    <td width="8%">
                        @obj.Manufacturer
                    </td>
                   
                    <td width="19%">
                        <div class="w75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-card-checklist"></i> Details</a>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-info mx-2"> <i class="bi bi-diagram-3"></i> Where Used</a>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edti</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>