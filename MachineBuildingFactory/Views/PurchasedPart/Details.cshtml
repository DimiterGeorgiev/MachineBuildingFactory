@model EditPurchasedPartViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary">Details</h1>
<hr />

<partial name="_Notification" />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

        <img class="card-img-top" style="width: 18rem;"
             src="@Model.Image" alt="Image Part">

        @Html.HiddenFor(m => m.Id)

        <form asp-action="Details" method="get">
            

            <div class="mb-3">
                <a asp-controller="PurchasedPart" asp-action="AllPurchasedPart" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>
            </div>

            
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Part Name</label>
                <input asp-for="@Model.Name" disabled class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <textarea asp-for="@Model.Description" disabled class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Image</label>
                <input asp-for="@Model.Image" disabled class="form-control" aria-required="true" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.SupplierId" class="form-label">Supplier</label>
                <select asp-for="@Model.SupplierId" disabled class="form-control">
                    @foreach (var supplier in Model.Suppliers)
                    {
                        <option value="@supplier.Id">@supplier.Name</option>
                    }
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ManufacturerId" class="form-label">Manifacturer</label>
                <select asp-for="@Model.ManufacturerId" disabled class="form-control">
                    @foreach (var manifacturer in Model.Manufacturers)
                    {
                        <option value="@manifacturer.Id">@manifacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>


            @*<div class="mb-3">
                <label asp-for="@Model.AuthorSignature" class="form-label">Author signature</label>
                <input asp-for="@Model.AuthorSignature" disabled class="form-control" value="@Model.AuthorSignature" />
                <span asp-validation-for="AuthorSignature" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SurfaceArea" class="form-label">Surface area in square meters</label>
                <input asp-for="@Model.SurfaceArea" disabled class="form-control" value="@Model.SurfaceArea" />
                <span asp-validation-for="SurfaceArea" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <label asp-for="@Model.ItemNumber" class="form-label">Item Number</label>
                <input asp-for="@Model.ItemNumber" disabled class="form-control" value="@Model.ItemNumber" />
                <span asp-validation-for="ItemNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Weight" class="form-label">Weight in kilograms</label>
                <input asp-for="@Model.Weight" disabled class="form-control" value="@Model.Weight" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            @*<div class="mb-3">
                <label asp-for="@Model.SurfaceTreatment">Surface treatment</label>

                <select disabled class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.SurfaceTreatment">

                    <option value="@TypeOfSurfaceTreatment.UntreatedSurface">Untreated surface</option>
                    <option value="@TypeOfSurfaceTreatment.Electrogalvanized">Electrogalvanized</option>
                    <option value="@TypeOfSurfaceTreatment.Oxidize">Oxidize</option>
                    <option value="@TypeOfSurfaceTreatment.Paint">Paint</option>
                   
                </select>

                <span asp-validation-for="@Model.SurfaceTreatment" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.TypeOfPaint">Paint type</label>

                <select disabled class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.TypeOfPaint">

                    <option value="@TypeOfPaint.Nitrocellulose">Nitrocellulose</option>
                    <option value="@TypeOfPaint.Synthetic">Synthetic</option>
                    <option value="@TypeOfPaint.Epoxy">Epoxy</option>
                    <option value="@TypeOfPaint.Polyurethane">Polyurethane</option>

                </select>

                <span asp-validation-for="@Model.TypeOfPaint" class="text-danger"></span>
            </div>*@


            <div class="mb-3">
                <label asp-for="@Model.Standard" class="form-label">Standard</label>
                <input asp-for="@Model.Standard" disabled class="form-control" value="@Model.Standard" />
                <span asp-validation-for="Standard" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <a asp-controller="PurchasedPart" asp-action="AllPurchasedPart" class="btn btn-secondary" style="width:150px">
                    Back to List
                </a>
                <a asp-controller="PurchasedPart" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}