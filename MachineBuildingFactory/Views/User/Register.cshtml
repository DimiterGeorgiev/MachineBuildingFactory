@using MachineBuildingFactory.Data.Enums
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserName">Username</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email">Email</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstName">First Name</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastName">Last Name</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Title">Title</label>
                @*<input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Title" />*@

                <select class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Title">

                    <option value="@Title.Mr">Mr</option>
                    <option value="@Title.Mrs">Mrs</option>
                    <option value="@Title.DI">DI</option>
                    <option value="@Title.FU">FU</option>
                    <option value="@Title.Dr">Dr</option>
                </select>

                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Phone">Phone</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Phone" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Department">Department</label>
                @*<input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Department" />*@
                
                <select class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Department">
                    
                    <option value="@Department.Management">Management</option>
                    <option value="@Department.Production">Production</option>
                    <option value="@Department.Engineering">Engineering</option>
                    <option value="@Department.HR">HR</option>
                    <option value="@Department.IT">IT</option>
                </select>

                <span asp-validation-for="@Model.Department" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Signature">Signature</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Signature" />
                <span asp-validation-for="@Model.Signature" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

