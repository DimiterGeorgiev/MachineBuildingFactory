@model IEnumerable<SupplierViewModel>
@{
    ViewData["Title"] = "AllSupplier";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Supplier List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Management" asp-controller="Supplier" asp-action="CreateNewSupplier" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new Supplier
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Supplier Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    URL Address
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%">
                        @obj.Name
                    </td>
                    <td width="15%">
                        @obj.Email
                    </td>
                    <td width="15%">
                        @obj.UrlAddress
                    </td>
                    <td width="32%">
                        <div class="w75 btn-group" role="group">
                            <a asp-area="Management" asp-controller="Supplier" asp-action="Details" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-card-checklist"></i> Details</a>
                            <a asp-area="" asp-controller="Assembly" asp-action="WhereUsedSupplier" asp-route-id="@obj.Id"
                           class="btn btn-info mx-2"> <i class="bi bi-diagram-3"></i> Where Used</a>
                            <a asp-area="Management" asp-controller="Supplier" asp-action="EditSupplier" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
