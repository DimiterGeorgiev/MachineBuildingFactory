@model EditSupplierViewModel
@{
    ViewData["Title"] = "EditSupplier";
}


<h1 class="text-primary">Edit Supplier</h1>

<hr />

<partial name="_Notification" />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="EditSupplier" method="post">
            @Html.HiddenFor(m => m.Id)

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Part Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label">Email</label>
                <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.UrlAddress" class="form-label">URL Address</label>
                <input asp-for="@Model.UrlAddress" class="form-control" aria-required="true" />
                <span asp-validation-for="UrlAddress" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input class="btn btn-warning" type="submit" value="Edit" />
                <a asp-area="Management" asp-controller="Manufacturer" asp-action="AllSupplier" class="btn btn-secondary" style="width:150px">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
